package ClasesFiguras;


public class Superheroe {
    private String nombre;
    private String descripcion;
    private boolean capa;

    //Constructor
    public Superheroe(String nombre) {
        this.nombre = nombre;
        this.descripcion="";
        this.capa=false;
    }
    
     //Metodo SET se usa para asignarle valores a las propiedades

    public void setNombre(String nombre) {
        this.nombre = nombre;
    }

    public void setDescripcion(String descripcion) {
        this.descripcion = descripcion;
    }

    public void setCapa(boolean capa) {
        this.capa = capa;
    }
    //Metodo GET se usa para obtener el valor de las propiedades

    public String getNombre() {
        return nombre;
    }

    public String getDescripcion() {
        return descripcion;
    }

    public boolean isCapa() {
        return capa;
    }
    //Metodo toString, se usa para crear un texto con las caracteristicas del objeto

    @Override
    public String toString() {
        return "Superheroe{" + "nombre=" + nombre + ", descripcion=" + descripcion + ", capa=" + capa + '}';
    }
    
    
    }
